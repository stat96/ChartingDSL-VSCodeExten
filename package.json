{
  "name": "chartingdsl-vscode-extension",
  "displayName": "ChartingDSL VS Code Extension",
  "description": "Syntax highlighting, code completion, and chart preview for ChartingDSL .dsl files.",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:chartingdsl",
    "onCommand:chartingdsl.previewChart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chartingdsl",
        "aliases": [
          "ChartingDSL",
          "chartingdsl"
        ],
        "extensions": [
          ".dsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chartingdsl",
        "scopeName": "source.chartingdsl",
        "path": "./syntaxes/chartingdsl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "chartingdsl.previewChart",
        "title": "ChartingDSL: Preview Chart"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.18.63",
    "mocha": "^11.7.2",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37"
  }
}
